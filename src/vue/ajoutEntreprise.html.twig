
{% extends 'base.html.twig' %}

{% block title %}Hello EntrepriseController!{% endblock %}

{% block body %}

    {% if form.valide is defined %}
        {% if form.valide == false %}
            
            <div class="alert alert-danger h3 mb-3 font-weight-normal" role="alert">
                {{ form.message }}
            </div>

        {% else %}

            <div class="alert alert-success h3 mb-3 font-weight-normal" role="alert">
                {{ form.message }}
            </div>

        {% endif %}
    {% else %}

<div class="container-fluid">
    <div class="row justify-content-center">
        <h1 class="text-center text-secondary p-4">Cr√©er une nouvelle entreprise</h1>
    </div>
  <div class="row justify-content-center">
        <div class="col-8 bg-primary p-4 m-0 text-white">

        
        <form name="ajout_entreprise" method="post">

        <div class="form-group">
            <label class="font-weightbold required" for="libelle">Nom de l&#039;entreprise</label>
            <input type="text" id="libelle" name="libelle" required="required" class="form-control" />
        </div>
<br></br>
        <div class="form-group mx-auto text-center">
            <button type="submit" id="btAjoutEntreprise" name="btAjoutEntreprise" class="btn font-weightbold bg-success text-white mx-auto text-center">Ajouter</button>
        </div>

        </div>
    </div>
</div>

{% endif %}

{% endblock %}